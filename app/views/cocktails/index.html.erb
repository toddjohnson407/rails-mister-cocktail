<h1>Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= cocktail.name %>
      <% cocktail.doses.each do |dose| %>
        <%= dose.description %>
      <% end %>
      <%= link_to "view cocktail", cocktail_path(cocktail) %>
     </li>
  <% end %>
</ul>

<%= link_to "create a cocktail", new_cocktail_path %>
